@model GradeCalcModel;

<h2>Calculate your grade based on percentages:</h2>
<!--This form is taking inputs from the user and dynamically getting it changed from the javascript attachment-->
<form method="post">
    <label>Assignments grade (as whole number):</label>
    <input id="assignmentPercent" asp-for="Assignments"/> <br />
    <label>Group Project (as whole number):</label>
    <input id="groupPercent" asp-for="Group_Projects"/><br />
    <label>Quizzes (as whole number):</label>
    <input id="quizPercent" asp-for="Quizzes"/><br />
    <label>Midterm Exam (as whole number):</label>
    <input id="midtermPercent" asp-for="Midterm"/><br />
    <label>Final Exam (as whole number):</label>
    <input id="finalPercent" asp-for="Final"/><br />
    <label>Intex (as whole number):</label>
    <input id="intexPercent" asp-for="Intex"/><br /><br /><br />
    <input id="btnSend" type="submit" value="Calculate Grade" />
</form>
<br />
<br />
<div asp-validation-summary="All"></div>
<p> Your grade result:</p>
<p id="results"></p>

